11)#include <stdio.h>

int main()
{
    float c, l, g, a, v;
    
    ///Entrada:valores do comprimento e largura do terreno
    printf("insira o comprimento do terreno ");
    scanf("%f" , &c);
    
    printf("insira a largura do terreno ");
    scanf("%f" , &l);
    
    printf("insira o custo do metro quadrado da grama ");
    scanf("%f" , &g);
    
    a = c * l;
    v = g * a;
    ///Saida:Area do terreno e valor a ser gasto com a grama
    printf("A area do terreno e %.0fm2 " , a);
    printf("\n O valor a ser gasto com a grama e %.2fR$" , v);
    
    return 0;
}
_________________________________________________________________________
12)#include <stdio.h>

int main()
{
    float c, l, valorarame, m, valortotal, calcterreno;
    ///entrada: comprimento e a largura de um terreno retangular e o valor do arame
    printf("insira o comprimento do terreno: ");
    scanf("%f" , &c);
    printf("insira a largura do terreno: ");
    scanf("%f" , &l);
    printf("insira o vaor do arame farpado: ");
    scanf("%f" , &valorarame);
    
    m = c * l;
    calcterreno = m * 4;
    valortotal = m * valorarame * 4;
    
    ///Saida:tamanho do terreno e valor a ser gasto com o arame
    printf("Serao gastos %.2fm de arame farpado para cercar o terreno " , calcterreno);
    printf("\n O valor a ser gasto com arame sera de  %.2fR$" , valortotal);
    
    return 0;
}
