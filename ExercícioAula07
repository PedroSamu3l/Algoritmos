8)#include <stdio.h>

int main()
{
    float km, m;
    ///Entrada:valor em km
    printf("qual o valor em km ? ");
    scanf("%f" , &km);
    
   m = km * 0.621371;
    
    ///Saida:valor em milhas 
    printf("O valor em milhas e %.6f " , m);
    return 0;
}
