6)#include <stdio.h>

int main()
{
    float c, f;
    ///Entrada:valor da temperatura em graus Celsius
    printf("qual a temperatura em graus Celsius ? ");
    scanf("%f" , &c);
    
   f = 32 + ((float) 212 - 32) / 100 * c;
    
    ///Saida:valor da temperatura em graus Fahrenheit
    printf("A temperatura em graus Fahrenheit e %.2f " , f);
    return 0;
}
_________________________________________________________________________
7)#include <stdio.h>

int main()
{
    float v, r;
    ///Entrada:valor do raio de uma esfera
    printf("qual o valor do raio da esfera ? ");
    scanf("%f" , &r);
    
   v = ((float)4 / 3) * 3.14 * r *r *r;
    
    ///Saida:valor do volume da esfera
    printf("O valor do volume da esfera e %.2f " , v);
    return 0;
}
