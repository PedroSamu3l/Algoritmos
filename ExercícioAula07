2)#include <stdio.h>

int main()
{
    float b, h, r;
    ///Entrada: base e altura do triangulo
    printf("qual o valor da base e da altura do triangulo ? ");
    scanf("%f %f" , &b, &h);
    
    r = b * h / 2;

    ///Saida: area do triangulo 
    printf("A area do triangulo e %.1f" , r);
    return 0;
}
_________________________________________________________________________
3)#include <stdio.h>

int main()
{   
    float p, a, r;
    /// Entrada: float altura (Metros) e peso (KG)
    printf("qual a altura (Metros) e o peso (KG) ? ");
    scanf("%f %f" , &a, &p);
    
    r = p / (a * a);
    
    ///Saída: float IMC da pessoa
    printf("O IMC dessa pessoa e %.2f" , r);
    return 0;
}
