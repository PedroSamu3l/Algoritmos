5)#include <stdio.h>

int main()
{
    float b, v, r;
    ///Entrada:valor da quantidade de bytes
    printf("qual a quantidade de bytes ? ");
    scanf("%f" , &b);
    
    printf("qual a velocidade de transmissão em bytes por segundo ? ");
    scanf("%f" , &v);
    
    r = b / v;
    ///Saida:tempo para o download do arquivo
    printf("serão necessários %.2f segundos para fazer o download do arquivo" , r);
    return 0;
}
