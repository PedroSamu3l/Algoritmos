10)#include <stdio.h>

int main()
{
    float n1, n2, n3, p1, p2, p3, m;
    
    ///Entrada:valores das nota do aluno
    printf("insira o valor da nota 1 e o peso ");
    scanf("%f %f" , &n1, &p1);
    
    printf("insira o valor da nota 2 e o peso ");
    scanf("%f %f" , &n2, &p2);
    
    printf("insira o valor da nota 3 e o peso ");
    scanf("%f %f" , &n3, &p3);
    
    m = ((n1 * p1) + (n2 * p2) + (n3 * p3)) / 3;
    
    ///Saida:media ponderada do aluno
    printf("A media ponderada do aluno e %.2f " , m);
    
    return 0;
}
