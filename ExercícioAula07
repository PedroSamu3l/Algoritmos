9)#include <stdio.h>

int main()
{
    float r, h, v;
    ///Entrada:valor do raio e da altura
    printf("qual o valor do raio do cilindro ? ");
    scanf("%f" , &r);
    
    printf("qual o valor da altura do cilindro ? ");
    scanf("%f" , &h);
    
   v = 3.14 * (r * r) * h;
    
    ///Saida:valor do volume do cilindro
    printf("O volume do cilindro e %.2f " , v);
    return 0;
}
