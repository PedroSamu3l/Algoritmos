14)#include <stdio.h>

int main()
{
    float a, b, x;
    ///entrada: 
    printf("insira o valor de a: ");
    scanf("%f" , &a);
    printf("insira o valor de b: ");
    scanf("%f" , &b);
    
    if (a > 0) 
    {
        x = b / a;
        printf("o valor de x e %.f " , x);
    }
    
    if (a <= 0) 
    {
        puts("ERRO: a nao pode ser igual a zero");
    }
    
    return 0;
}
