13)#include <stdio.h>

int main()
{
    float a, n, r, an;
    ///entrada: 
    printf("insira o primeiro termo de a: ");
    scanf("%f" , &a);
    printf("insira o valor de n: ");
    scanf("%f" , &n);
    printf("insira o valor de r: ");
    scanf("%f" , &r);
    
    an = a + (n - 1) * r;
    
    ///Saida:
    printf("o n-esimo termo e %.0f " , an);
    
    return 0;
}
