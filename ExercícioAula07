4)#include <stdio.h>

int main()
{
    float p, d, r;
    ///Entrada:valor do produto e valor do desconto
    printf("qual o valor do produto ? ");
    scanf("%f" , &p);
    
    printf("qual o valor percentual do desconto ? ");
    scanf("%f" , &d);
    
    r = p - (d / 100);
    ///Saida:Valor final após o calculo do desconto 
    printf("O valor final e %.2f" , r);
    return 0;
}
